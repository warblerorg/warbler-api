{
    "name": "@warbler/api",
    "private": true,
    "version": "1.0.0",
    "description": "API reference for Wabler server implementations.",
    "license": "MIT",
    "scripts": {
        "build": "rollup -c",
        "lint:js": "prettier --parser typescript \"ui/*.js\"",
        "lint:yml": "prettier --parser yaml \"*.{yml,yaml}\"",
        "lint": "npm run lint:js -- --write && npm run lint:yml -- --write",
        "lint:check": "npm run lint:js -- --check && npm run lint:yml -- --check"
    },
    "dependencies": {},
    "devDependencies": {
        "prettier": "^1.16.4",
        "rollup": "^1.2.3",
        "rollup-plugin-commonjs": "^9.2.1",
        "rollup-plugin-cpy": "^1.1.0",
        "rollup-plugin-node-resolve": "^4.0.1",
        "swagger-ui-dist": "^3.20.8"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "all",
        "proseWrap": "always"
    }
}
